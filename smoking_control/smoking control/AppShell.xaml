<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="smoking_control.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:smoking_control"
    xmlns:pages="clr-namespace:smoking_control.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="smoking_control">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Logs"
        ContentTemplate="{DataTemplate pages:LogsPage}"/>
    <Shell.FlyoutFooter>
        <Button Text="Sign out"
                Clicked="Button_Clicked"
                Style="{StaticResource ButtonText}"/>
    </Shell.FlyoutFooter>
</Shell>
